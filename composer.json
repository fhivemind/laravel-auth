{
    "name": "jourfixer/api",
    "description": "Backend for Jourfixer APP",
    "keywords": [
        "laravel",
        "api"
    ],
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Ramiz Polic",
            "email": "hivemindf@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2.5",
        "fideloper/proxy": "^4.2",
        "fruitcake/laravel-cors": "^1.0",
        "guzzlehttp/guzzle": "^6.3",
        "laravel/framework": "^7.0",
        "laravel/tinker": "^2.4",
        "laravel/ui": "^2.0",
        "laravelcollective/html": "^6.2"
    },
    "require-dev": {
        "specialtactics/l5-api": "^2.0",
        "doctrine/dbal": "~2.3",
        "infyomlabs/coreui-templates": "7.0.x-dev",
        "infyomlabs/laravel-generator": "7.0.x-dev",
        "barryvdh/laravel-ide-helper": "^2.7",
        "beyondcode/laravel-dump-server": "^1.4",
        "facade/ignition": "^2.0",
        "fzaninotto/faker": "^1.9.1",
        "mockery/mockery": "^1.3.1",
        "nunomaduro/collision": "^4.1",
        "phpunit/phpunit": "^8.5",
        "reliese/laravel": "^0.0.18",
        "laravel/telescope": "^3.3"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "laravel/telescope"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "App\\Models\\": [
                "app/Models/API/",
                "app/Models/User/"
            ],
            "App\\Http\\Controllers\\": [
                "app/Http/Controllers/API/",
                "app/Http/Controllers/User/"
            ],
            "App\\Repositories\\": [
                "app/Repositories/User/"
            ]
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php artisan jwt:secret"
        ],
        "test": "./vendor/bin/phpunit --colors=always -v --testdox",
        "lint": "./vendor/bin/phpcs",
        "docs": [
            "@php artisan ide-helper:generate --no-interaction"
        ],
        "build": "./env/build.sh"
    }
}